@model ProductViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div id="carouselExampleCaptions" class="carousel slide carousel-fade" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2" aria-label="Slide 3"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="3" aria-label="Slide 4"></button>
        <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="4" aria-label="Slide 5"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img style="object-fit:cover; max-height:400px" src="Images/Curtains/4.jpg" class="d-block w-100" alt="Image Slider">
            <div class="carousel-caption d-flex flex-column justify-content-center h-100" style="top: 0">
                <h1 class="display-4 text-dark font-weight-700"><b>Fit-Fabrics</b> এ আপনাকে স্বাগতম!</h1>
            </div>
        </div>
        <div class="carousel-item">
            <img style="object-fit:cover; max-height:400px" src="Images/Curtains/4.jpg" class="d-block w-100" alt="Image Slider">
            <div class="carousel-caption d-flex flex-column justify-content-center h-100" style="top: 0">
                <h1 class="display-4 text-dark font-weight-700">আপনাকে আপনার পছন্দমত স্যাম্পল দেওয়ার সুবিধা দেওয়া হয়!</h1>
            </div>
        </div>
        <div class="carousel-item">
            <img style="object-fit:cover; max-height:400px" src="Images/Curtains/4.jpg" class="d-block w-100" alt="Image Slider">
            <div class="carousel-caption d-flex flex-column justify-content-center h-100" style="top: 0">
                <h1 class="display-4 text-dark font-weight-700">রানিং আইটেম সব সময় স্টক এ থাকে!</h1>
            </div>
        </div>

        <div class="carousel-item">
            <img style="object-fit:cover; max-height:400px" src="Images/Curtains/4.jpg" class="d-block w-100" alt="Image Slider">
            <div class="carousel-caption d-flex flex-column justify-content-center h-100" style="top: 0">
                <h1 class="display-4 text-dark font-weight-700">রেগুলার ইম্পোর্ট করা হয়ে থাকে!</h1>
            </div>
        </div>

        <div class="carousel-item">
            <img style="object-fit:cover; max-height:400px" src="Images/Curtains/4.jpg" class="d-block w-100" alt="Image Slider">
            <div class="carousel-caption d-flex flex-column justify-content-center h-100" style="top: 0">
                <h1 class="display-4 text-dark font-weight-700">পাইকারি বিক্রয় করা হয়!</h1>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<br />

<ul class="nav nav-pills" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
        <button class="nav-link active" id="curtain-tab" data-bs-toggle="tab" data-bs-target="#curtain" type="button" role="tab" aria-controls="curtain" aria-selected="true">Curtains</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="sofacover-tab" data-bs-toggle="tab" data-bs-target="#sofacover" type="button" role="tab" aria-controls="sofacover" aria-selected="false">Sofa Covers</button>
    </li>
    <li class="nav-item" role="presentation">
        <button class="nav-link" id="eyelet-tab" data-bs-toggle="tab" data-bs-target="#eyelet" type="button" role="tab" aria-controls="eyelet" aria-selected="false">Eyelets</button>
    </li>
</ul>
<div class="tab-content" id="myTabContent">
    <div class="tab-pane fade show active" id="curtain" role="tabpanel" aria-labelledby="curtain-tab">
        <div class="row">
            @foreach (var item in Model.Curtains)
            {
                <section class="col-lg-4 col-md-6 py-3">
                    <div class="card" style="margin: auto;">
                        <img src="@item.ImageUrl" class="card-img-top" alt="Curtain Image">
                        <div class="card-body">
                            <h5 class="card-title" style="font-weight: 600">@item.Name</h5>
                            @Html.ActionLink("View Detail", "Curtains", new {id=item.Id},
                        new{@class = "btn btn-secondary cursor-pointer shadow-none"})
                        </div>
                    </div>
                </section>
            }
        </div>
    </div>
    <div class="tab-pane fade" id="sofacover" role="tabpanel" aria-labelledby="sofacover-tab">
        <div class="row">
            @foreach (var item in Model.SofaCovers)
            {
                <section class="col-lg-4 col-md-6 py-3">
                    <div class="card" style="margin: auto;">
                        <img src="@item.ImageUrl" class="card-img-top" alt="Curtain Image">
                        <div class="card-body">
                            <h5 class="card-title" style="font-weight: 600">@item.Name</h5>
                            @Html.ActionLink("View Detail", "SofaCovers", new {id=item.Id},
                        new{@class = "btn btn-secondary cursor-pointer shadow-none"})
                        </div>
                    </div>
                </section>
            }
        </div>
    </div>
    <div class="tab-pane fade show active" id="eyelet" role="tabpanel" aria-labelledby="eyelet-tab">
        <div class="row">
            @foreach (var item in Model.Eyelets)
            {
                <section class="col-lg-4 col-md-6 py-3">
                    <div class="card" style="margin: auto;">
                        <img src="@item.ImageUrl" class="card-img-top" alt="Curtain Image">
                        <div class="card-body">
                            <h5 class="card-title" style="font-weight: 600">@item.Name</h5>
                            @Html.ActionLink("View Detail", "Eyelets", new {id=item.Id},
                        new{@class = "btn btn-secondary cursor-pointer shadow-none"})
                        </div>
                    </div>
                </section>
            }
        </div>
    </div>
</div>
